<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <EditText
        android:id="@+id/etNormalText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Enter text to translate"
        android:minHeight="48dp"
        android:padding="12dp"
        android:textSize="16sp" />


    <Button
        android:id="@+id/btnTranslate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Translate to Morse"
        android:backgroundTint="#E89D34"
        android:layout_below="@id/etNormalText"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/tvMorseCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Morse code will appear here"
        android:layout_below="@id/btnTranslate"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:padding="8dp"
        android:background="#E0E0E0"
        android:textColor="#000" />
</RelativeLayout>
