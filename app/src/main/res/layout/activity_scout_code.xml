<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tools.ScoutCodeActivity"
    android:padding="16dp">

    <!-- Gambar di atas -->

    <!-- Teks di tengah -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="87dp"
        android:layout_height="108dp"
        android:contentDescription="Scout Icon"
        android:src="@drawable/ic_scout_code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Kotak oranye dengan sudut melengkung -->

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="National Scout Code of Order"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView" />

    <LinearLayout
        android:id="@+id/orangeBox"
        android:layout_width="371dp"
        android:layout_height="507dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_box"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleText">

        <!-- Tri Satya -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Tri Satya"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Dasa Darma -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Demi kehormatanku aku berjanji akan bersungguh-sungguh:\n1. Menjalankan kewajibanku terhadap Tuhan dan Negara Kesatuan Republik Indonesia dan mengamalkan Pancasila\n2. Menolong sesama hidup dan ikut serta membangun masyarakat\n3. Menepati Dasa Darma"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Dasa Darma"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="1. Takwa kepada Tuhan Yang Maha Esa\n2. Cinta alam dan kasih sayang sesama manusia\n3. Patriot yang sopan dan ksatria\n4. Patuh dan suka bermusyawarah\n5. Rela menolong dan tabah\n6. Rajin, terampil, dan gembira\n7. Hemat, cermat, dan bersahaja\n8. Disiplin, berani, dan setia\n9. Bertanggung jawab dan dapat dipercaya\n10. Suci dalam pikiran, perkataan, dan perbuatan"
            android:textColor="#000000"
            android:textSize="14sp" />

        <!-- Dwi Darma -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Dwi Darma"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="93dp"
            android:text="1. Kami Pramuka Indonesia, bertakwa kepada Tuhan Yang Maha Esa, cinta alam, dan kasih sayang sesama manusia\n2. Kami Pramuka Indonesia, patriot yang sopan dan kesatria"
            android:textColor="#000000"
            android:textSize="13sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
