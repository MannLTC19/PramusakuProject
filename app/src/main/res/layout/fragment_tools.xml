<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Tulisan "Tools" -->
    <TextView
        android:id="@+id/tv_tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tools"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tulisan "Categories" -->
    <TextView
        android:id="@+id/tv_categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/tv_tools"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Kotak 1: National Scout Code of Order -->
    <LinearLayout
        android:id="@+id/box_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/rounded_box"
        android:layout_margin="8dp"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintTop_toBottomOf="@+id/tv_categories"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/img_box_1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_scout_code" />

        <TextView
            android:id="@+id/text_box_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="National Scout Code of Order"
            android:textColor="#000000"
            android:textSize="14sp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Kotak 2: National Data -->
    <LinearLayout
        android:id="@+id/box_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/rounded_box"
        android:layout_margin="8dp"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintTop_toBottomOf="@+id/tv_categories"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/img_box_2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_national_data" />

        <TextView
            android:id="@+id/text_box_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="National Data"
            android:textColor="#000000"
            android:textSize="14sp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Kotak 3: Cryptography coder-decoder -->
    <LinearLayout
        android:id="@+id/box_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/rounded_box"
        android:layout_margin="8dp"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintTop_toBottomOf="@+id/box_1"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/img_box_3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_cryptography" />

        <TextView
            android:id="@+id/text_box_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cryptography coder-decoder"
            android:textColor="#000000"
            android:textSize="14sp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Kotak 4: Scouting Crafts -->
    <LinearLayout
        android:id="@+id/box_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/rounded_box"
        android:layout_margin="8dp"
        app:layout_constraintWidth_percent="0.45"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintTop_toBottomOf="@+id/box_2"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/img_box_4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_scouting_crafts" />

        <TextView
            android:id="@+id/text_box_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scouting Crafts"
            android:textColor="#000000"
            android:textSize="14sp"
            android:gravity="center" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
